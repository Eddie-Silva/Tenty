<% include ../partials/header %>

<div class="container">
   <div class="row">

      <div class="col-sm-3"></div>

      <div class="col-sm-6 light-bg text-pad">
         <div class="section-title text-center">
            <h1> Edit <%=campground.name%></h1>
         </div>
      
         
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
               <div class="form-group">
                  <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>"> <!-- 'value' fills in the fileds with data-->
               </div>

               <div class="form-group">
                  <input class="form-control" type="number"  name="campground[price]" min="0.01" step="0.01" value="<%=campground.price%>">
               </div>

               <div class="form-group">
                  <input class="form-control" type="text" name="campground[image]" value="<%=campground.image%>">
               </div>

               <div class="form-group">
                  <textarea class="form-control"  rows="5" name="campground[description]" ><%=campground.description%></textarea>
               </div>

               <div class="form-group">
                  <button class="btn btn-lg more-info shadowy fira-thin btn-block">
                  Submit
               </button>
               </div>
            </form>
         </div>
      </div>
      <div class="col-sm-3"></div>
   </div>  
</div>

<% include ../partials/footer %>      