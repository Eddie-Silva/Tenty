<% include ../partials/header %>


<div class="container">
   <div class="row">
         <div class="col-sm-3"></div>

      <div class="col-sm-6 light-bg text-pad">
         <div class="section-title text-center">
            <h1>Share Campout</h1>
         </div>
      
      <form class="form" action="/campgrounds" method="post">
         <div class="form-group">
            <input class="form-control fira-thin" type="text" placeholder="name" name="name">
         </div>
          <div class="form-group">
            <input class="form-control fira-thin" type="number" placeholder="price" name="price" min="0.01" step="0.01">
         </div>
         <div class="form-group">
            <input class="form-control fira-thin" type="text" placeholder="image url" name="image">
         </div>
         <div class="form-group">
         <textarea class="form-control fira-thin" rows="3" placeholder="description" name="description"></textarea>
         </div>
         <div class="form-group">
         <button class="btn btn-lg  more-info shadowy fira-thin btn-block">
            Submit
         </button>
         </div>
      </form>

      </div>
      <div class="col-sm-3"></div>
   </div>  
</div>


<% include ../partials/footer %>