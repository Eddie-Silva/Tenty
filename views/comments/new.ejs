<% include ../partials/header %>


<div class="container">
   <div class="row">
      
      <div class="col-sm-3"></div>
      <div class="col-sm-6 light-bg text-pad">
            <div class="section-title text-center">
                  <h1 > Add comment to <%= campground.name %></h1>
               </div>
         <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
               <input class="form-control fira-thin" type="text" placeholder="text" name="comment[text]">
            </div>
            <div class="form-group">
               <button class="btn btn-lg more-info shadowy fira-thin btn-block">
                  Submit
               </button>
            </div>
         </form>
      </div>
      <div class="col-sm-3"></div>

   </div>  
</div>

<% include ../partials/footer %>